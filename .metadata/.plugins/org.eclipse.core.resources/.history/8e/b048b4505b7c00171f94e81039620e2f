package br.vaga.emprego.conexao;

import java.io.IOException;
import java.sql.Connection;
import java.sql.SQLException;

import br.vaga.emprego.utils.ConexaoUtils;

public class Conexao {

	public Connection conectarBase() throws IOException, ClassNotFoundException, SQLException {
		
		Connection conexao = criarConexao();
		
		return conexao;
	}
	
	private Connection criarConexao() {
		StringBuilder conexaoBase = new StringBuilder();
		conexaoBase.append(ConexaoUtils.PROTOCOLO).append(StringUtils.DOIS_PONTOS)
				.append("sqlserver").append(StringUtils.DOIS_PONTOS)
				.append(StringUtils.DUAS_BARRAS).append(propriedade.getProperty("config.ip"))
				.append(StringUtils.PONTO_VIRGULA).append(DATA_BASE_NAME)
				.append(propriedade.getProperty("config.database")).append(StringUtils.PONTO_VIRGULA);
		return DriverManager.getConnection(conexaoBase.toString(), propriedade.getProperty("config.user"),
				propriedade.getProperty("config.senha"));
	}
	
	
}
