package br.vaga.emprego.conexao;

import java.io.IOException;
import java.sql.Connection;
import java.sql.SQLException;
import java.util.Properties;

public class Conexao {

	public Connection conectarBase() throws IOException, ClassNotFoundException, SQLException {
		logger.info("Criando conexão com o banco de dados.");
		Properties propriedade = abrirArquivoProperties();
		Connection conexao = criarConexao(propriedade);
		logger.info("Criado a conexão com o banco de dados.");
		return conexao;
	}
	
	
}
